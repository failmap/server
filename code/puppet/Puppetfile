mod 'puppetlabs-vcsrepo'
mod 'thias-php'
mod 'puppetlabs-mysql'
mod 'example42-network'
mod 'puppetlabs-docker'
# pin for puppet4+ compat
mod 'KyleAnderson/consul', '>=3.0.0'
